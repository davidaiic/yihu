{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServiceTypes",
  "description": "服务项目根模板（平台维度的大类，如 居家护理/住院护理/陪诊/月嫂/跑腿）。",
  "type": "object",
  "required": [ "_id", "key", "name", "status" ],
  "properties": {
    "_id": { "type": "string" },
    "key": {
      "type": "string",
      "enum": [ "homeCare", "inHospital", "accompaniment", "maternity", "errand" ]
    },
    "name": { "type": "string" },
    "status": {
      "type": "string",
      "enum": [ "active", "inactive" ]
    },
    "description": { "type": [ "string", "null" ] }
  }
}
