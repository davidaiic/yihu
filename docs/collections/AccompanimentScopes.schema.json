{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AccompanimentScopes",
  "description": "陪诊资质与范围：护理员可在哪些医院/团队提供陪诊服务及审批状态。",
  "type": "object",
  "required": [ "_id", "caregiverId", "status" ],
  "properties": {
    "_id": { "type": "string" },
    "caregiverId": {
      "type": "string",
      "description": "Users._id"
    },
    "deptId": {
      "type": [ "string", "null" ],
      "description": "医院/陪诊团队 Department._id"
    },
    "citystdname": { "type": [ "string", "null" ] },
    "status": {
      "type": "string",
      "oneOf": [
        {
          "const": "pending",
          "description": "待审批"
        },
        {
          "const": "approved",
          "description": "已批准"
        },
        {
          "const": "rejected",
          "description": "已驳回"
        }
      ]
    },
    "approvedBy": { "type": [ "string", "null" ] },
    "approvedAt": {
      "oneOf": [
        {
          "type": "string",
          "format": "date-time"
        },
        { "type": "integer" }
      ],
      "x-tcb-type": "Date"
    },
    "createdAt": {
      "oneOf": [
        {
          "type": "string",
          "format": "date-time"
        },
        { "type": "integer" }
      ],
      "x-tcb-type": "Date"
    }
  }
}
