{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SchedulesAvailability",
  "description": "护理员可约时间槽（30分钟粒度）。占位版，后续由 domain/scheduling 完整定义。",
  "type": "object",
  "required": [ "_id", "caregiverId", "date" ],
  "properties": {
    "_id": { "type": "string" },
    "caregiverId": { "type": "string" },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "YYYY-MM-DD"
    },
    "slots": {
      "type": "array",
      "description": "长度<=48 的半小时段数组，示例对象式：{ \"t\": \"09:00\", \"available\": true }",
      "items": {
        "type": "object",
        "properties": {
          "t": {
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}$"
          },
          "available": { "type": "boolean" }
        }
      }
    },
    "updatedAt": {
      "oneOf": [
        {
          "type": "string",
          "format": "date-time"
        },
        { "type": "integer" }
      ],
      "x-tcb-type": "Date"
    }
  }
}
